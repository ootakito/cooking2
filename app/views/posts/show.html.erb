<%= render "shared/header" %>
<div class="recipe-card-show2">
  <div class="show-text">
    <div class="new-posts">
      <div class="weight-bold-text">
        投稿者 
      </div>
      <div class="posts-explain">
      <div class="posts-text" id="post-title">
        <%= @post.user.nickname %>
      </div>
      <div class="posts-explain">
      <div class="weight-bold-text">
        レシピ名
      </div>
      <div class="posts-text" id="post-title">
        <%= @post.title %>
      </div>
      <div class="recipe-card-show">
        <div class="recipe-card-side">
        <% if @post.images.attached? %>
        <% @post.images.each do |image| %>
        <%= image_tag image.variant(resize: "200x200!"), class: "recipe-image" %>
        <% end %>
        <% end %>
      </div>
      </div>
      <div class="posts-explain">
      <div class="weight-bold-text">
        レシピの説明
      </div>
      </div>
        <%= form_with model: @post, local: true do |f| %>
        <%= f.text_area :description, class:"posts-description", id:"post-info", placeholder:"料理の説明（必須 200文字まで）" ,rows:"7" ,maxlength:"200", readonly: true %>
        <% end %>
      <div class="show-btn">
        <% if current_user && current_user.id == @post.user_id %>
        <%= link_to "レシピの編集", edit_post_path(@post), class: "post-yellow-btn" %>
          <p class="or-text">or</p>
        <%= link_to "削除", post_path(@post), method: :delete, data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "post-destroy" %>
        <% end %>
    </div>
  </div>
</div>

