<div class="post-contents">
  <div class="post-main">
    <h2 class="post-title">レシピを入力</h2>
    <%= form_with model: @post, local: true, id: @post.new_record? ? 'new_post' : 'edit_post' do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      <div id="error-message" style="color: red; display: none;"></div>
      <%# レシピ画像 %>
      <div class="img-upload">
        <div class="weight-bold-text">
          レシピ画像
          <span class="indispensable">必須</span>
        </div>
        <div id="previews"></div>
        <div id="input-container">
          <div class="click-upload">
            <p>最大3枚まで1番最後の画像がトップ表示されます。</p>
            <% f.file_field :images, name: 'post[images][]', multiple: true, id: "post-images" %>
          </div>
        </div>
      </div>
      <%# /レシピ画像 %>

      <%# レシピ名とレシピ説明 %>
      <div class="new-posts">
        <div class="weight-bold-text">
          レシピ名
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :title, class: "posts-text", id: "post-title", placeholder: "料理名（必須 15文字まで)", maxlength: "15" %>
        <div class="posts-explain">
          <div class="weight-bold-text">
            レシピの説明
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_area :description, class: "posts-description", id: "post-info", placeholder: "料理の説明（必須 200文字まで）", rows: "7", maxlength: "200" %>
        </div>
      </div>
      <%# /レシピ名とレシピ説明 %>

      <%# 下部ボタン %>
      <div class="post-btn-contents">
        <%= f.submit "レシピを投稿する", class: "post-btn" %>
        <%= link_to 'もどる', root_path, class: "back-btn" %>
      </div>
      <%# /下部ボタン %>
    <% end %>
  </div>
</div>
