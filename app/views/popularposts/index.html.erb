<%= render "shared/header" %>
<div class='main'>
  <div class="recipe-new">いいね順⭐️一覧</div>
  <div class="recipe-grid">
    <% @posts.each do |post| %>
      <div class="recipe-card">
        <%= link_to post_path(post), style: "text-decoration: none;" do %>
        <%= post.title %>
          <%= image_tag post.image.variant(resize: "260x260!"), class: 'post-image' if post.image.attached? %>
        <% end %>
        <%= render partial: "likes/like", locals: { post: post } %>
      </div>
    <% end %>
  </div>
</div>
