<header class='top-page-header'>
  <div class='cooking logo'>
    <%= image_tag 'coooking.png', size: '185x185' %>
  </div>
  <div class='cooking logoo'>
    <%= image_tag 'coooking.png', size: '185x185' %>
  </div>
  <!-- 検索フォーム -->
  <div class='search-bar-contents'>
    <%= search_form_for @q, url: search_posts_path, html: { id: "detailed-search-form", class: "search-form" } do |f| %>
      <div class="search-field">
        <%= f.text_field :title_cont, placeholder: 'キーワードから探す', class: 'input-box' %>
      </div>
      <%= f.submit '検索', class: 'search-button' %>
    <% end %>
  </div>
  <!-- ナビゲーション -->
  <div class='nav'>
    <!-- 左側ナビゲーション -->
    <ul class='lists-left'>
      <li>
        <%= link_to '投稿する', new_post_path, class: 'brand-list' %>
      </li>
      <li>
        <%= link_to '投稿済み一覧', mypage_posts_path, class: 'brand-list' unless current_page?(mypage_posts_path) %>
      </li>
      <li>
        <%= link_to 'いいね順⭐️', popularposts_posts_path, class: 'brand-list' unless current_page?(popularposts_posts_path) %>
      </li>
      <li>
        <%= link_to '新着のレシピ', root_path, class: 'brand-list' unless current_page?(root_path) %>
      </li>
    </ul>
    <!-- 右側ナビゲーション -->
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><a href="#" class="user-nickname"><%= current_user.nickname %>様</a></li>
        <li><a href="<%= destroy_user_session_path %>" data-turbo-method="delete" class="logout">ログアウト</a></li>
      <% else %>
        <li><a href="<%= new_user_session_path %>" class="login">ログイン</a></li>
        <li><a href="<%= new_user_registration_path %>" class="sign-up">新規登録</a></li>
        <% end %> 
    </ul>
  </div>
</header>