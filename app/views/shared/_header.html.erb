  <div class='cooking logoo'>
    <%= image_tag 'coooking.png', size: '185x185' %>
  </div>
  <!-- 検索フォーム -->
  <div class='search-bar-contents'>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
    </form>
  </div>
  <!-- ナビゲーション -->
  <div class='nav'>
    <!-- 左側ナビゲーション -->
    <ul class='lists-left'>
      <li>
